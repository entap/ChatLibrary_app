                                HasShadow="False"
                                CornerRadius="14"
                                BorderColor="Transparent"
                                IsClippedToBounds="True"
                                Padding="0">
                                <Image
                                    WidthRequest="30"
                                    HeightRequest="30"
                                    Source="{Binding UserIcon}"
                                    Aspect="AspectFill"
                                    VerticalOptions="StartAndExpand"/>
                            </Frame>
                            <Frame
                                Margin="6,0,6,0"
                                HasShadow="False"
                                CornerRadius="8"
                                Padding="0"
                                BackgroundColor="{Binding Source={x:Reference Content}, Path=OtherMessageViewBackgroundColor}">
                                <Label
                                    Margin="6"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Fill"
                                    VerticalOptions="Fill"
                                    Text="{Binding Text}"
                                    FontSize="14"/>
                            </Frame>
                            <Label
                                VerticalOptions="EndAndExpand"
                                Text="{Binding SendDateTime, Converter={StaticResource timeConverter}}"
                                FontSize="10"/>
                        </StackLayout>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>

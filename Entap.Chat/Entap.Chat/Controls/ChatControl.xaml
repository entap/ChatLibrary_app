            <DataTemplate x:Key="myTextMessageTemplate" x:DataType="local:TextMessage">
                <ViewCell
                    x:Name="Cell">
                    <StackLayout
                        Spacing="0"
                        Margin="16,6,16,6"
                        HorizontalOptions="FillAndExpand"
                        BackgroundColor="Transparent">
                        <Frame
                            Margin="10"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="Fill"
                            HasShadow="False"
                            CornerRadius="10"
                            IsVisible="{Binding DateVisible}"
                            BackgroundColor="{Binding Source={x:Reference Content}, Path=DateBackgroundColor}"
                            Padding="0">
                            <Label
                                Margin="12,2"
                                HorizontalTextAlignment="Center"
                                VerticalTextAlignment="Center"
                                TextColor="{Binding Source={x:Reference Content}, Path=DateTextColor}"
                                Text="{Binding SendDateTime, Converter={StaticResource dateConverter}}"
                                FontSize="14"/>
                        </Frame>
                        <StackLayout
                            Spacing="0"
                            BackgroundColor="Transparent"
                            Orientation="Horizontal">
                            <StackLayout
                                WidthRequest="{Binding Source={x:Reference Content}, Path=DateTextWidth}"
                                HorizontalOptions="EndAndExpand"
                                VerticalOptions="EndAndExpand"
                                Spacing="0"
                                Margin="0,0,6,0">
                                <!-- MessageIdをTimeConverterのMessageIdにバインドする最善策がわからなかったので一旦このLabelを使ってバインドさせている -->
                                <Label
                                    x:Name="MessageId"
                                    Text="{Binding MessageId}"
                                    IsVisible="false"/>
                                <Label
                                    HorizontalTextAlignment="End"
                                    IsVisible="{Binding ResendVisible, Converter={StaticResource boolReverseConverter}}"
                                    FontSize="10">
                                    <Label.Text>
                                        <Binding Path="AlreadyReadCount">
                                            <Binding.Converter>
                                                <local:AlreadyReadConverter IsGroupChat="{Binding Source={x:Reference Content}, Path=IsGroupChat}"/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Label.Text>
                                </Label>
                                <Label
                                    HorizontalTextAlignment="End"
                                    IsVisible="{Binding ResendVisible, Converter={StaticResource boolReverseConverter}}"
                                    FontSize="10">
                                    <Label.Text>
                                        <Binding Path="SendDateTime">
                                            <Binding.Converter>
                                                <local:TimeConverter MessageId="{Binding Source={x:Reference MessageId}, Path=Text}"/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Label.Text>
                                </Label>
                            </StackLayout>
                            <Frame
                                HasShadow="False"
                                CornerRadius="8"
                                BackgroundColor="{Binding Source={x:Reference Content}, Path=MyMessageViewBackgroundColor}"
                                Padding="0">
                                <Label
                                    Margin="6"
                                    HorizontalOptions="Fill"
                                    VerticalOptions="Fill"
                                    Text="{Binding Text}"
                                    FontSize="14"/>
                            </Frame>
                            <ImageButton
                                IsVisible="{Binding ResendVisible}"
                                Margin="6,0,0,0"
                                HorizontalOptions="End"
                                VerticalOptions="CenterAndExpand"
                                BackgroundColor="Transparent"
                                WidthRequest="{Binding Source={x:Reference Content}, Path=ResendIconSize}"
                                HeightRequest="{Binding Source={x:Reference Content}, Path=ResendIconSize}"
                                Source="resend_icon.png"
                                Aspect="AspectFit"
                                CommandParameter="{Binding Source={x:Reference Cell}, Path=BindingContext}"
                                Command="{Binding Source={x:Reference Content}, Path=ResendCommand}"/>
                        </StackLayout>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>

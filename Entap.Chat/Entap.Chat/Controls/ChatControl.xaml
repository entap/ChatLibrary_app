                                <Label
                                    HorizontalTextAlignment="Center"
                                    VerticalTextAlignment="Center"
                                    TextColor="{Binding Source={x:Reference Content}, Path=DateTextColor}"
                                    Text="{Binding SendDateTime, Converter={StaticResource timeConverter}}"
                                    FontSize="10"/>
                                <!-- MessageTypeをMemberInAndOutMessageConverterのMessageTypeにバインドする最善策がわからなかったので一旦このLabelを使ってバインドさせている -->
                                <Label
                                    x:Name="MessageType"
                                    Text="{Binding MessageType}"
                                    IsVisible="false"/>
                                <Label
                                    HorizontalTextAlignment="Center"
                                    VerticalTextAlignment="Center"
                                    TextColor="{Binding Source={x:Reference Content}, Path=DateTextColor}"
                                    FontSize="14">
                                    <Label.Text>
                                        <Binding Path="Text">
                                            <Binding.Converter>
                                                <local:MemberInAndOutMessageConverter MessageType="{Binding Source={x:Reference MessageType}, Path=Text}"/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Label.Text>
                                </Label>
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
            <local:MessageDataTemplateSelector
                x:Key="messageDataTemplateSelector"
                MyTextMessageTemplate="{StaticResource myTextMessageTemplate}"
                OthersTextMessageTemplate="{StaticResource othersTextMessageTemplate}"
                MyImageMessageTemplate="{StaticResource myImageMessageTemplate}"
                OthersImageMessageTemplate="{StaticResource othersImageMessageTemplate}"
                MyVideoMessageTemplate="{StaticResource myVideoMessageTemplate}"
                OthersVideoMessageTemplate="{StaticResource othersVideoMessageTemplate}"
                MemberInAndOutMessageTemplate="{StaticResource memberInAndOutMessageTemplate}"
            />
            <local:TimeConverter x:Key="timeConverter"/>
            <local:DateConverter x:Key="dateConverter"/>
            <local:BoolReverseConverter x:Key="boolReverseConverter"/>
        </ResourceDictionary>
    </local:CustomContentView.Resources>

    <Grid
        x:Name="Grid"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        ColumnSpacing="0"
        RowSpacing="0"
        BackgroundColor="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <local:ChatListView
            x:Name="ChatList"
            BackgroundColor="{Binding Source={x:Reference Content}, Path=ChatViewBackgroundColor}"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            ItemTemplate="{StaticResource messageDataTemplateSelector}"/>
        <local:BottomController
            x:Name="Controller"
            Grid.Row="1"/>
    </Grid>
</local:CustomContentView>
            <DataTemplate x:Key="memberInAndOutMessageTemplate" x:DataType="local:MessageBase">
                <ViewCell>
                    <StackLayout
                        Spacing="0"
                        Margin="16,6,16,6"
                        HorizontalOptions="FillAndExpand"
                        BackgroundColor="Transparent">
                        <Frame
                            Margin="10"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="Fill"
                            HasShadow="False"
                            CornerRadius="14"
                            BackgroundColor="{Binding Source={x:Reference Content}, Path=DateBackgroundColor}"
                            Padding="0">
                            <StackLayout
                                Margin="12,2"
                                Spacing="0">
                                <Label
                                    HorizontalTextAlignment="Center"
                                    VerticalTextAlignment="Center"
                                    TextColor="{Binding Source={x:Reference Content}, Path=DateTextColor}"
                                    Text="{Binding SendDateTime, Converter={StaticResource timeConverter}}"
                                    FontSize="10"/>
                                <!-- MessageTypeをMemberInAndOutMessageConverterのMessageTypeにバインドする最善策がわからなかったので一旦このLabelを使ってバインドさせている -->
                                <Label
                                    x:Name="MessageType"
                                    Text="{Binding MessageType}"
                                    IsVisible="false"/>
                                <Label
                                    HorizontalTextAlignment="Center"
                                    VerticalTextAlignment="Center"
                                    TextColor="{Binding Source={x:Reference Content}, Path=DateTextColor}"
                                    FontSize="14">
                                    <Label.Text>
                                        <Binding Path="Text">
                                            <Binding.Converter>
                                                <local:MemberInAndOutMessageConverter MessageType="{Binding Source={x:Reference MessageType}, Path=Text}"/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Label.Text>
                                </Label>
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                </ViewCell>

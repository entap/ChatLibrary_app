<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ChatSample.ContactAddressePage"
    xmlns:local="clr-namespace:ChatSample">
    <ContentPage.BindingContext>
        <local:ContactAddressePageViewModel
            x:Name="ContactAddressePageViewModel"
            ContactListPageFlag="True"/>
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackLayout
            Spacing="0"
            IsVisible="{Binding ContactListPageFlag}"
            Orientation="Horizontal">
            <Label
                VerticalOptions="CenterAndExpand"
                Margin="0,5,0,0"
                WidthRequest="90"
                FontAttributes="Bold"
                FontSize="10"
                Text="追加するユーザーのID"/>
            <Editor
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                BackgroundColor="LightGray"
                Text="{Binding EditorText, Mode=TwoWay}"/>
            <Button
                Margin="10"
                HorizontalOptions="End"
                VerticalOptions="FillAndExpand"
                WidthRequest="70"
                Text="追加"
                Command="{Binding AddCmd}"/>
        </StackLayout>
        
        <ListView
            Grid.Row="1"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            RowHeight="50"
            ItemsSource="{Binding ItemsSource}"
            SelectionMode="None">
            <ListView.Behaviors>
                <local:EventToCommandBehavior 
                    EventName="ItemTapped" 
                    Command="{Binding ItemTappedCmd}"/>
            </ListView.Behaviors>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout
                            Spacing="0"
                            Orientation="Horizontal"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">
                            <Label
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="FillAndExpand"
                                HorizontalTextAlignment="Center"
                                VerticalTextAlignment="Center"
                                Text="{Binding Name}"/>
                            <Button
                                IsVisible="{Binding Source={x:Reference ContactAddressePageViewModel}, Path=ContactListPageFlag}"
                                WidthRequest="80"
                                VerticalOptions="FillAndExpand"
                                Text="削除"
                                CommandParameter="{Binding UserId}"
                                Command="{Binding Source={x:Reference ContactAddressePageViewModel}, Path=DelCmd}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>
